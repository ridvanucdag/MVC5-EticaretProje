@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<KargoDetay>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Kargolar</h2>

@using (Html.BeginForm("Index", "Kargo", FormMethod.Get))
{
    <p>
        Kargo Takip Numarası : @Html.TextBox("kod")
        <input type="submit" value="Ara" />
    </p>
}

<table class="table table-condensed">
    <tr>
        <th>ID</th>
        <th>TakipKodu</th>
        <th>Personel</th>
        <th>Alıcı</th>
        <th>Tarih</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.KargoDetayid</td>
            <td>@x.TakipKodu</td>
            <td>@x.Personel</td>
            <td>@x.Alici</td>
            <td>@x.Tarih</td>
            <td><a href="/Kargo/KargoTakip/@x.TakipKodu" class="btn btn-info">Detaylar</a></td>

        </tr>
    }

</table>
<a href="/Kargo/YeniKargo/" class="btn btn-primary">Yeni Kargo Ekle</a>
