@using MvcOnlineTicariOtomasyon.Models.Siniflar
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Kategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Kategoriler</h2>

<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>ID</th>
        <th>Kategori Adı</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.KategoriID</td>
            <td>@x.KategoriAd</td>
            <td><a href="/Kategori/KategoriGetir/@x.KategoriID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Kategori/KategoriSil/@x.KategoriID" class="btn btn-danger">Sil</a></td>
        </tr>
    }


</table>

@Html.PagedListPager((IPagedList)Model,sayfa=>Url.Action("Index",new {sayfa})
,new PagedListRenderOptions {
    LiElementClasses=new List<string>
    { "page-link"} })

<a href="/Kategori/KategoriEkle" class="btn btn-primary">Kategori Ekle</a>

